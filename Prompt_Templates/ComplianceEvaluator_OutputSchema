# Basic Schema

{
  "compliance_status": "Compliant/Non-Compliant",
  "evidence_details": [
    {
      "evidence_id": 1,
      "policy_excerpt": "Quote from the Usage Policy",
      "transcript_excerpt": "Quote from the transcript",
      "reasoning": "Explanation of how this excerpt violates or complies with the policy"
    },
    {
      "evidence_id": 2,
      "policy_excerpt": "Quote from the Usage Policy",
      "transcript_excerpt": "Quote from the transcript",
      "reasoning": "Explanation of how this excerpt violates or complies with the policy"
    }
    // Additional evidence entries as needed
  ]
}


# Schema for ChatGPT (according to ChatGPT's guidelines):

{
  "name": "compliance_analysis",
  "schema": {
    "type": "object",
    "properties": {
      "compliance_status": {
        "type": "string",
        "enum": ["Compliant", "Non-Compliant"],
        "description": "Indicates whether the custom GPT complies with the OpenAI usage policy."
      },
      "evidence_details": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "evidence_id": {
              "type": "integer",
              "description": "A unique identifier for each piece of evidence."
            },
            "policy_excerpt": {
              "type": "string",
              "description": "A quote or relevant section from the OpenAI usage policy."
            },
            "transcript_excerpt": {
              "type": "string",
              "description": "A quote or excerpt from the conversation transcript demonstrating compliance or violation."
            },
            "reasoning": {
              "type": "string",
              "description": "Explanation of how the transcript excerpt complies with or violates the policy excerpt."
            }
          },
          "required": ["evidence_id", "policy_excerpt", "transcript_excerpt", "reasoning"],
          "additionalProperties": false
        }
      }
    },
    "required": ["compliance_status", "evidence_details"],
    "additionalProperties": false
  },
  "strict": true
}
